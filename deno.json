{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["./src/vite-env.d.ts", "./src/vue-shims.d.ts"]
  },
  "tasks": {
    "build": "npm run build && echo 'Build completed'",
    "serve": "deno run --allow-net --allow-read server.ts",
    "start": "deno task build && deno task serve"
  }
}